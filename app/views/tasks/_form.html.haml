.container
  %ul
    - task.errors.full_messages.each do |message|
      %li= message
  -if request.get?
    %h2 New Card
  -else
    %h2 Edit Card
  = form_with(model: task, local:true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit 'Submit', class: 'btn-primary'